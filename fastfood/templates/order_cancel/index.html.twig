{% extends 'base.html.twig' %}

{% block title %}Erreur echec paiement
{% endblock %}

{% block body %}
	<div class="erreur-paiement" style="margin:12rem 12%">
		<h2>Erreur de paiement</h2>
		<p style="font-size:1.25rem"> 
			Bonjour
			<strong>{{ order.user.firstname }}
				{{ order.user.lastname }}</strong>,<br/><br/>
			Il semblerait que votre paiement est échoué pour votre commande n°<strong>{{ order.reference }}</strong>.<br/>
			Une confirmation d'erreur vient de vous être envoyée par email à l'adresse
			<strong>{{ order.user.email }}</strong>.
		</p>
		<a href="{{ path('order') }}" class="btn btn-success">Réessayer le paiement</a>

	</div>


{% endblock %}
